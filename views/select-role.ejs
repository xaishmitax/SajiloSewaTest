  <script>
    // Add smooth scrolling for navigation links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth'
          });
        }
      });
    });

    // Form submission handling
    document.querySelector('.search-form').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const location = document.querySelector('select[name="location"]').value;
      const work = document.querySelector('select[name="work"]').value;
      const date = document.querySelector('input[name="date"]').value;
      
      if (!location || !work || !date) {
        alert('Please fill in all fields to book a service.');
        return;
      }
      
      // Check if user is logged in by making a request to check session
      fetch('/check-auth', {
        method: 'GET',
        credentials: 'same-origin'
      })
      .then(response => response.json())
      .then(data => {
        if (data.authenticated) {
          // User is logged in, proceed with booking
          const locationText = document.querySelector('select[name="location"] option:checked').text;
          const workText = document.querySelector('select[name="work"] option:checked').text;
          
          // Submit booking to server
          submitBooking(location, work, date, locationText, workText);
        } else {
          // User is not logged in, redirect to login page
          alert('Please login to book a service. You will be redirected to the login page.');
          window.location.href = '/login';
        }
      })
      .catch(error => {
        console.error('Error checking authentication:', error);
        // If there's an error, redirect to login page for safety
        alert('Please login to book a service. You will be redirected to the login page.');
        window.location.href = '/login';
      });
    });

    // Function to submit booking to server
    function submitBooking(location, work, date, locationText, workText) {
      fetch('/book', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          location: location,
          work: work,
          date: date,
          locationText: locationText,
          workText: workText
        }),
        credentials: 'same-origin'
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert(`Service Booking Confirmed!\n\nLocation: ${locationText}\nService: ${workText}\nDate: ${date}\n\nThank you! We'll contact you soon to confirm your booking.`);
          // Reset form
          document.querySelector('.search-form').reset();
        } else {
          alert('Booking failed. Please try again.');
        }
      })
      .catch(error => {
        console.error('Error submitting booking:', error);
        alert('Booking failed. Please try again.');
      });
    }

    // Scroll effects for statistics
    function animateOnScroll() {
      const statItems = document.querySelectorAll('.stat-item');
      
      statItems.forEach(item => {
        const itemTop = item.getBoundingClientRect().top;
        const itemVisible = 150;
        
        if (itemTop < window.innerHeight - itemVisible) {
          item.classList.add('animate');
        }
      });
    }

    // Initial check and scroll event listener
    window.addEventListener('scroll', animateOnScroll);
    window.addEventListener('load', animateOnScroll);

    // Testimonial navigation
    let currentTestimonial = 0;
    const testimonials = document.querySelectorAll('.testimonial-item');
    const dots = document.querySelectorAll('.dot');

    function showTestimonial(index) {
      // Hide all testimonials
      testimonials.forEach(item => item.classList.remove('active'));
      dots.forEach(dot => dot.classList.remove('active'));
      
      // Show current testimonial
      testimonials[index].classList.add('active');
      dots[index].classList.add('active');
      
      currentTestimonial = index;
    }

    function changeTestimonial(direction) {
      let newIndex = currentTestimonial + direction;
      
      if (newIndex < 0) {
        newIndex = testimonials.length - 1;
      } else if (newIndex >= testimonials.length) {
        newIndex = 0;
      }
      
      showTestimonial(newIndex);
    }

    function goToTestimonial(index) {
      showTestimonial(index);
    }

    // Auto-rotate testimonials every 5 seconds
    setInterval(() => {
      changeTestimonial(1);
    }, 5000);

    // Keyboard navigation
    document.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowLeft') {
        changeTestimonial(-1);
      } else if (e.key === 'ArrowRight') {
        changeTestimonial(1);
      }
    });
  </script>
